@page "{name}"
@model EduArticles.UI.Pages.ProfileModel
@inject IStringLocalizer<EduArticles.UI.Pages.ProfileModel> localizer
@{
    ViewData["Title"] = Model.UserName;
}

<div class="container">
    <div class="row">
        <div class="col-md-9">
            <partial name="/Pages/Shared/_PostList.cshtml" model="Model.Posts" />
        </div>
        <div class="col-md-3">
            <div class="card shadow mt-4">
                <div class="card-body">
                    <h5 class="card-title">
                        @localizer["About"] @Model.UserName
                    </h5>
                    <p>
                        <strong>
                            @Model.Posts.Count()
                        </strong>
                        @(Model.Posts.Count() == 1 ? localizer["Post"] : localizer["Posts"])
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>